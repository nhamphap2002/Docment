<?xml version="1.0"?>
<config>
    <default>
        <add_date_required_field>
            <Fgc_address_settings>
                <enable>1</enable>
            </Fgc_address_settings>
        </add_date_required_field>
    </default>

<adminhtml>
    <acl>
        <resources>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <add_date_required_field translate="label" module="address">
                                      <label>Date Required</label>
                                      <sort_order>99999</sort_order>
                                    </add_date_required_field>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
    <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <address_custom_order_view_info>
                        <class>address/observer</class>
                        <method>getSalesOrderViewInfo</method>
                    </address_custom_order_view_info>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
</adminhtml>

    <modules>
        <Fgc_Address>
            <version>0.1.0</version>
        </Fgc_Address>
    </modules>
    <frontend>
        <routers>
            <address>
                <use>standard</use>
                <args>
                    <module>Fgc_Address</module>
                    <frontName>address</frontName>
                </args>
            </address>
        </routers>
        <layout>
            <updates>
                <address>
                    <file>address.xml</file>
                </address>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <address>
                <class>Fgc_Address_Model</class>
                <resourceModel>address_mysql4</resourceModel>
            </address>
            <address_mysql4>
                <class>Fgc_Address_Model_Mysql4</class>
                <entities>
                    <address>
                        <table>address</table>
                    </address>
                </entities>
            </address_mysql4>
        </models>
        <resources>
            <address_setup>
                <setup>
                    <module>Fgc_Address</module>
                    <class>Mage_Customer_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </address_setup>
            <address_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </address_write>
            <address_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </address_read>
        </resources>
        <blocks>
            <address>
                <class>Fgc_Address_Block</class>
            </address>
        </blocks>
        <helpers>
            <address>
                <class>Fgc_Address_Helper</class>
            </address>
        </helpers>
     </global>
     <global>
        <fieldsets>
        	<sales_convert_quote_address>
        		<date_required>
                    <to_order_address>*</to_order_address>
                    <to_customer_address>*</to_customer_address>
                </date_required>
        	</sales_convert_quote_address>
        	<customer_address>
        		<date_required>
                    <to_quote_address>*</to_quote_address>
                </date_required>
        	</customer_address>
        </fieldsets>
    </global>
</config>